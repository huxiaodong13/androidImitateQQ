<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/leaf">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:padding="50dp">

        <EditText
            android:id="@+id/update_etUser"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:hint="用户名" />

        <EditText
            android:id="@+id/update_etPws"
            android:layout_width="348dp"
            android:layout_height="58dp"
            android:inputType="textPassword"
            android:hint="密码" />
        <EditText
            android:id="@+id/update_etPassword"
            android:layout_width="348dp"
            android:layout_height="58dp"
            android:inputType="textPassword"
            android:hint="再次确认密码" />

        <TextView
            android:id="@+id/update_tvQues"
            android:layout_width="348dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:text="你喜欢吃什么？"
            android:textSize="18sp"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/update_etAnser"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:text="密保答案" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <Button
                android:id="@+id/update_btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消" />

            <Button
                android:id="@+id/update_btnOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="确定" />
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
